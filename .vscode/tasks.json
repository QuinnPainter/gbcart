    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "wsl make",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "wsl make test",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "wsl make clean",
            "group": "none",
            "problemMatcher": []
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "./flash.bat",
            "group": "none",
            "problemMatcher": []
        }
    ]
}